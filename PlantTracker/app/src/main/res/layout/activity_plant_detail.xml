<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/plantImageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:contentDescription="Plant image"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/plantNameDetailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Plant Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plantDescriptionDetailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Plant Description"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wateredAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Watered: 0 ml"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputWaterEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Enter ml of water"
            android:inputType="number" />

        <Button
            android:id="@+id/waterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Water" />

        <Button
            android:id="@+id/wikiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Open Wikipedia" />

    </LinearLayout>
</ScrollView>
